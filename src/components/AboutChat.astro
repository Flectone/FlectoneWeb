---
import { useTranslations } from "@/utils/i18n";
import { Github, Heart } from "lucide-react";
import { CarouselPlugin } from "./shared/Carousel";
import { Button } from "./ui/button";
const currentLocale = Astro.currentLocale || "en";
const { t } = useTranslations(currentLocale as "en" | "ru");
---

  <div class="flex lg:flex-row flex-col justify-between max-w-screen-xl mx-auto pt-32">
    <div class="flex flex-col justify-center lg:items-start lg:w-1/2">
      <h1>FlectoneChat</h1>
      <p class="w-[75%]">{t("fchat-description")}</p>
      <h2 class="mt-4">{t("use-pulse")} <b class="text-blue-500">FlectonePulse</b></h2>
      <div class="flex max-lg:w-full justify-between gap-3 mt-6">
        <a href="https://modrinth.com/plugin/flectonepulse">
          <Button className="bg-green-400 hover:bg-green-500">
            <Heart />
            <span>{t("modrinth-button")}</span>
          </Button>
        </a>
        <a href="https://github.com/Flectone/">
          <Button variant="ghost">
            <Github />
            <span>Github</span>
          </Button>
        </a>
      </div>
    </div>
    <div class="lg:w-1/2 lg:mt-0 mt-10 flex flex-col items-center">
      <CarouselPlugin client:load />
    </div>
  </div>
