---
import { useTranslations } from "@/utils/i18n";
import { Github, Heart } from "lucide-react";
import { CarouselPlugin } from "./shared/Carousel";
import { Button } from "./ui/button";
const currentLocale = Astro.currentLocale || "en";
const { t } = useTranslations(currentLocale as "en" | "ru");
---

<div class="max-w-screen-xl mx-auto pt-32">
  <div class="flex lg:flex-row flex-col justify-between">
    <div class="flex flex-col items-center lg:items-start lg:w-1/2">
      <header>
        <h1>FlectoneChat</h1>
        <p class="w-[75%]">
          {t("fchat-description")}
        </p>
        <h2 class="mt-8">
          {t("use-pulse")}
          <span class="text-sky-500">FlectonePulse</span>
        </h2>
        <p>{t("why-use")}</p>
      </header>
      <div class="flex gap-3 mt-6">
        <a href="https://modrinth.com/plugin/flectonepulse"
          ><Button className="bg-green-400 hover:bg-green-500"
            ><Heart /><span>{t("modrinth-button")}</span></Button
          ></a
        >
        <a href="https://github.com/Flectone/"
          ><Button variant="ghost"><Github /><span>Github</span></Button></a
        >
      </div>
    </div>
    <div class="lg:w-1/2 lg:mt-0 mt-10 flex flex-col items-center">
      <h2 class="text-center rounded-b-3xl">{t("chat-features")}</h2>
      <CarouselPlugin client:load />
      <p class="font-montserrat italic text-center">
        {t("things")}{" "}
        <span class="text-sky-500 text-center"> FlectonePulse </span>
      </p>
    </div>
  </div>
</div>
